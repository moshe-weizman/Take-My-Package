<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="	#ffd6d7d7"

    android:background="@drawable/custom_cardview"
    tools:layout_editor_absoluteX="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parcel ID:"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/textViewParcelId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textview"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address of recipient"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/textViewRecipientAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textview"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Package properties"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/parcelTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/parcelWeightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/fragileTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="fregile"
                    android:textColor="#F44336"
                    android:textSize="20sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address of storage"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/textViewLocationOfStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textview"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonIWantToTake"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_button"
                android:drawablePadding="12dp"
                android:shadowColor="@android:color/holo_blue_dark"
                android:text="I want to take it"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="@android:color/holo_blue_dark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonITookIt"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_button"
                android:drawablePadding="12dp"
                android:text="I took it"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

</LinearLayout>

</androidx.cardview.widget.CardView >
